<Window x:Class="iikoLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iikoLauncher"
        xmlns:vm="clr-namespace:iikoLauncher.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="600" Width="400" >
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="О программе"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="Готов"/>

        </StatusBar>
        <StackPanel DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" Margin="3">
                <TextBlock Width="80" Text="Логин:"/>
                <TextBox Width="300" Text="admin"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="3">
                <TextBlock Width="80" Text="Пароль:"/>
                <PasswordBox Width="300" Password="admin"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="3,0" Width="70" Content="Войти" />
                <Button Margin="3,0" Width="70" Content="Скачать" />
                <Button Margin="3,0" Width="70" Content="Закрыть"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="3">
                <TextBlock Width="80" Text="Сервер:"/>
                <TextBlock Width="300" Text="Тестовый сервер"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="3">
                <TextBlock Width="80" Text="URL (отл.):"/>
                <TextBlock Width="300" Text="http://localhost:8080/resto"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="3">
                <TextBlock Width="80" Text="Версия (отл.):"/>
                <TextBlock Width="300" Text="8.2.6"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="3">
                <TextBlock Width="80" Text="Вызов (отл.):"/>
                <TextBlock TextWrapping="Wrap" Width="300" Text="C:/Program File/iiko/iikoRMS/826/BackOffice.exe -login admin -password password"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="3">
                <TextBlock Width="80" Text="Поиск:"/>
                <TextBox Width="300" Text=""/>
            </StackPanel>
        </StackPanel>
        <TreeView >
        </TreeView>
    </DockPanel>
</Window>
