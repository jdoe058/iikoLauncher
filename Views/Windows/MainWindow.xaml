<Window x:Class="iikoLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:local="clr-namespace:iikoLauncher"
        xmlns:vm="clr-namespace:iikoLauncher.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="600" Width="400" >
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <XmlDataProvider x:Key="serversProvider" Source="../../iikoLauncher.xml" XPath="Servers"/>
        <CollectionViewSource x:Key="cvs" Source="{Binding Source={StaticResource serversProvider}, XPath=Server}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="@ChainName"/>
                <scm:SortDescription PropertyName="@Name"/>
            </CollectionViewSource.SortDescriptions>

                    <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="@ChainName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Command="{Binding CloseApplicationCommand}"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="О программе"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="{Binding Status}"/>
        </StatusBar>
        <StackPanel DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" Margin="3">
                <TextBlock Width="80" Text="Логин:"/>
                <TextBox Width="300" Text="admin"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="3">
                <TextBlock Width="80" Text="Пароль:"/>
                <PasswordBox Width="300" Password="admin"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="3,0" Width="70" Content="Войти" Command="{Binding LaunchOfficeCommand}"/>
                <Button Margin="3,0" Width="70" Content="Скачать" Command="{Binding DownloadOfficeCommand}" />
                <Button Margin="3,0" Width="70" Content="Закрыть" Command="{Binding CloseApplicationCommand}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="3">
                <TextBlock Width="80" Text="Сервер:"/>
                <TextBlock Width="300" Text="{Binding SelectedItem.Attributes[Name].Value , ElementName=dataGrid }" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="3">
                <TextBlock Width="80" Text="URL (отл.):"/>
                <TextBlock Width="300" Text="{Binding SelectedItem.Attributes[URL].Value , ElementName=dataGrid}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="3">
                <TextBlock Width="80" Text="Версия (отл.):"/>
                <TextBlock Width="300" Text="{Binding SelectedItem.Attributes[Version].Value , ElementName=dataGrid}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="3">
                <TextBlock Width="80" Text="Поиск:"/>
                <TextBox Width="300" Text=""/>
            </StackPanel>
        </StackPanel>
        <DataGrid AutoGenerateColumns="False" Name="dataGrid"
                  ItemsSource="{Binding Source={StaticResource cvs}, Mode=OneWay}" 
                  
                  SelectedIndex="0"
                  IsReadOnly="True">
            <DataGrid.GroupStyle>
                <GroupStyle/>
            </DataGrid.GroupStyle>
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Чейн" Binding="{Binding XPath=@IsChain}" />
                <DataGridTextColumn Header="Название" Binding="{Binding XPath=@Name}" />
                <DataGridTextColumn Header="Версия" Width="40" Binding="{Binding XPath=@Version}"/>
                <DataGridTextColumn Header="URL" Binding="{Binding XPath=@URL}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
